generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum StatutCommande {
  EN_ATTENTE
  EN_COURS
  TERMINE
  ANNULEE
}

model User {
  id        String   @id @default(uuid())
  prenom    String
  nom       String
  email     String   @unique
  password  String // mot de passe hash√©
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  commandes Commande[]

  @@map("users")
}

model Commande {
  id             String         @id @default(uuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  titre          String
  description    String?
  fichierUrl     String?
  statut         StatutCommande @default(EN_ATTENTE)
  noteClient     String? // Note du client (bonus)
  noteCorrecteur String? // Note du correcteur (bonus)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@map("commandes")
}
