{
  "name": "staka-livres",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up --build",
    "dev:watch": "docker compose -f docker-compose.dev.yml up --build",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm run test",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build",
    "docker:build": "./scripts/docker-build.sh",
    "docker:build:push": "./scripts/docker-build.sh latest --push",
    "deploy:vps": "./scripts/deploy-vps.sh",
    "deploy:vps:dry": "./scripts/deploy-vps.sh --dry-run",
    "migrate:db": "./scripts/migrate-db.sh",
    "migrate:db:schema": "./scripts/migrate-db.sh --schema-only",
    "migrate:db:dry": "./scripts/migrate-db.sh --dry-run",
    "migrate:db:reverse": "./scripts/migrate-db-reverse.sh",
    "migrate:db:reverse:dry": "./scripts/migrate-db-reverse.sh --dry-run"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "react",
    "vite",
    "staka",
    "éditions",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "description": "Staka Éditions - Mono-repo fullstack (React + Express + Prisma)",
  "dependencies": {
    "@tanstack/react-query": "^5.81.5",
    "bcryptjs": "^3.0.2",
    "lucide-react": "^0.525.0",
    "node-fetch": "^3.3.2",
    "react-hook-form": "^7.61.1",
    "react-query": "^3.39.3"
  }
}
